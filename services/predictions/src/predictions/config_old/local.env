# Predictions Service Configuration
# Environment variables with PREDICTIONS_ prefix

# Application settings
PREDICTIONS_APP_NAME=predictions
PREDICTIONS_DEBUG=false
PREDICTIONS_LOG_LEVEL=INFO
PREDICTIONS_LOG_FORMAT=json

# Kafka settings
PREDICTIONS_KAFKA_BROKER_ADDRESS=localhost:9092
PREDICTIONS_KAFKA_INPUT_TOPIC=technical_indicators
PREDICTIONS_KAFKA_OUTPUT_TOPIC=predictions
PREDICTIONS_KAFKA_CONSUMER_GROUP=predictions_consumer_group

# Prediction processing settings
PREDICTIONS_CANDLE_SECONDS=60
PREDICTIONS_PROCESSING_MODE=live

# Model settings
PREDICTIONS_MODEL_NAME=default_model
PREDICTIONS_MODEL_VERSION=latest
PREDICTIONS_PREDICTION_HORIZON_MINUTES=5